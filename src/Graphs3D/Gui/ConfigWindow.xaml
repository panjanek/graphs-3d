<Window x:Class="Graphs3D.Gui.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphs3D.Gui"
        mc:Ignorable="d"
        Title="ConfigWindow" 
        Width="380"
        Height="400"  
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        ShowInTaskbar="True"
        WindowStyle="None"
        AllowsTransparency="False"
        Opacity="1">
    <Border Background="#CC2B2B2B"
            CornerRadius="5"
            BorderBrush="#444"
            BorderThickness="1">
        <DockPanel>
            <!-- Custom Title Bar -->
            <Grid Height="32"
                  DockPanel.Dock="Top"
                  Background="#FF1E1E1E"
                  Name="customTitleBar">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Configuration"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           Foreground="White"
                           FontWeight="SemiBold"/>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Content="─"
                        FontSize="14"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Name="minimizeButton"
                        Cursor="Hand"/>

            </Grid>

            <!-- Window Content -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- 9 -->

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0" Grid.Column="0" Name="restartButton" ToolTip="Restart current graph">Restart</Button>
                    <Button Grid.Row="0" Grid.Column="1" Name="centerButton">Center</Button>
                    <Button Grid.Row="0" Grid.Column="2" Name="stopButton" ToolTip="Stops current animations">Stop</Button>
                    
                    <ToggleButton Name="recordButton" Grid.Row="0" Grid.Column="5" ToolTip="Record frames as PNG files to given folder" Click="Record_Click">
                        <ToggleButton.Style>
                            <Style TargetType="ToggleButton">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <!-- Default: red circle -->
                                        <Ellipse Width="12"
                             Height="12"
                             Fill="Red"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <!-- When recording -->
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <!-- Stop: black square -->
                                                <Rectangle Width="12"
                                       Height="12"
                                       Fill="Black"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Style>
                    </ToggleButton>

                   

                    <!-- animating to -->
                    <Button Grid.Row="2" Grid.Column="0" Name="animateToBtn">Go to:</Button>
                    <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Name="animateToCombo">
                        <ComboBoxItem>Root</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Win</ComboBoxItem>
                        <ComboBoxItem>Best</ComboBoxItem>
                    </ComboBox>

                    <!-- expanding nodes -->
                    <Button Grid.Row="2" Grid.Column="3" Name="expandBtn">Expand:</Button>
                    <ComboBox Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Name="expandCombo">
                        <ComboBoxItem>Next 100 nodes</ComboBoxItem>
                        <ComboBoxItem IsSelected="True">Till winning position found</ComboBoxItem>
                        <ComboBoxItem>All</ComboBoxItem>
                    </ComboBox>


                    <CheckBox Name="highlightCheckbox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" ToolTip="Highlight path from root to selected node">Highlight</CheckBox>
                    <CheckBox Name="autoDistCheckbox" IsChecked="True" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" ToolTip="Adapt automatically distance to the camera">Auto distance</CheckBox>
                    <CheckBox Name="showImageCheckbox" IsChecked="True" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" ToolTip="Display game position">Show image</CheckBox>

                </Grid>

                <!-- graph selection -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Graph" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="10,5,5,0" Foreground="White" TextWrapping="Wrap"/>
                <ComboBox Name="graphCombo" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" SelectionChanged="global_SelectionChanged" Margin="0,5,10,0">
                </ComboBox>

                <!-- navigation mode -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Navigation mode" Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="10,5,5,0" Foreground="White" TextWrapping="Wrap"/>
                <ComboBox Name="navigationCombo" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,10,0">
                    <ComboBoxItem IsSelected="True">Locked on center</ComboBoxItem>
                    <ComboBoxItem>Locked on selected node</ComboBoxItem>
                    <ComboBoxItem>Free navigation</ComboBoxItem>
                </ComboBox>

                <!-- dt -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="step dt ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Integration step"/>
                <Slider Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0.001" Maximum="1" SmallChange="0.001" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="config.dt" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Tag="config.dt"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- rotation speed -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Rotation speed ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Rotation speed in lock mode"/>
                <Slider Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0.0" Maximum="0.01" SmallChange="0.0001" LargeChange="0.001" ValueChanged="Slider_ValueChanged" Tag="rotationSpeed" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Tag="rotationSpeed"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- camera period -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Camera adaptation time ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Camera adaptation time"/>
                <Slider Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Minimum="10" Maximum="1000" SmallChange="1" LargeChange="10" ValueChanged="Slider_ValueChanged" Tag="cameraPeriod" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="6" Grid.Column="2" Tag="cameraPeriod"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- particleSize -->
                <TextBlock Grid.Row="7" Grid.Column="0" Text="Node size ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Screen size of node balls"/>
                <Slider Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0.1" Maximum="2" SmallChange="0.02" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="particleSize" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="7" Grid.Column="2" Tag="particleSize"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- line width -->
                <TextBlock Grid.Row="8" Grid.Column="0" Text="line width ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Width of edge line"/>
                <Slider Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1" Minimum="10" Maximum="3000" SmallChange="50" LargeChange="200" ValueChanged="Slider_ValueChanged" Tag="lineWidth" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="8" Grid.Column="2" Tag="lineWidth"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- fog density -->
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Fog density ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="Darkening of distant vertices and edges"/>
                <Slider Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0.000" Maximum="0.01" SmallChange="0.0001" LargeChange="0.001" ValueChanged="Slider_ValueChanged" Tag="fogDensity" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="9" Grid.Column="2" Tag="fogDensity"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- Fade not highlighted -->
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Fade unhighlighted ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="In highlight-path mode: how much to fade other virtices and edges"/>
                <Slider Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="1" Minimum="0" Maximum="1.0" SmallChange="0.01" LargeChange="0.1" ValueChanged="Slider_ValueChanged" Tag="unhighlightedAlpha" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="10" Grid.Column="2" Tag="unhighlightedAlpha"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- expansion speed -->
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Expansion speed ⓘ" VerticalAlignment="Center" Margin="10,0,8,0" TextWrapping="Wrap" Foreground="White" ToolTip="How many nodes to add per each step"/>
                <Slider Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="1" Minimum="10" Maximum="3000" SmallChange="10" LargeChange="100" ValueChanged="Slider_ValueChanged" Tag="expansionSpeed" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="11" Grid.Column="2" Tag="expansionSpeed"  FontFamily="Courier New" Margin="0,5,10,0" VerticalAlignment="Center" FontSize="11" MouseDown="infoText_MouseDown" Foreground="White" Background="DarkGray" TextAlignment="Center" Padding="1"/>

                <!-- hidden canvas -->
                <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3" Opacity="0">
                <Canvas Name="positionCanvas"  Width="300" Height="300" Background="Black" Margin="10,25,10,10" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Border>
</Window>
